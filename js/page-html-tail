<script src="https://rawgit.com/carhartl/jquery-cookie/master/src/jquery.cookie.js"></script>
<script>
    $(document).ready(function() {
        //Remove Previous Cookie Here
        $.removeCookie('sep-cookie', {
            expires: 365,
            path: '/',
            domain: 'nbshubhelp.com'
        });

        $(".header-links #whats-new, #tz-menu #nav-new").click(function() {
            $("img.badger, img.menu-badger").css("display", "none");
            //Add New Cookie Here
            $.cookie('oct-cookie', true, {
                expires: 365,
                path: '/',
                domain: 'nbshubhelp.com'
            });
        });

        $(function() {
            //Add New Cookie Here Too
            if (!$.cookie('oct-cookie')) {
                $("img.menu-badger").css("display", "block");
                $("img.badger").css("display", "inline-block");
            }
        });
    });
</script>
<script>
  $(document).ready(function () {
      //$('<p class="refiner">Refine results by selecting a filter or changing the search terms.</p>').insertAfter('.mt-help-breadcrumb');
       $('<div class="mt-carousel-helper-text refine">Refine results by selecting a filter or changing the search terms.</p>').insertAfter('.mt-help-breadcrumb-container');

      //Add arrow icon to external links    
      $('.elm-content-container a[rel="external noopener nofollow"]').append('<span class="mt-icon-newtab"></span>');
  });
</script>